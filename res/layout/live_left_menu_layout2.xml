<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/m250dp"
    android:layout_height="@dimen/m550dp"
    android:background="@mipmap/live_left_menu_bg2"
    android:orientation="vertical"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m70dp"
        android:background="#00000000"
        android:orientation="horizontal">

        <Button
            android:id="@+id/live_ico_left"
            android:layout_width="@dimen/m40dp"
            android:layout_height="@dimen/m40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:background="@mipmap/arr_left_ico" />

        <TextView
            android:id="@+id/live_title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:gravity="center"
            android:text="@string/live_left_title_0"
            android:textColor="#ffffff"
            android:textSize="@dimen/m30sp" />

        <Button
            android:id="@+id/live_ico_right"
            android:layout_width="@dimen/m40dp"
            android:layout_height="@dimen/m40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:background="@mipmap/arr_right_ico" />


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/m5dp"
        android:layout_marginRight="@dimen/m5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/live_line_t" />

    <ListView
        android:id="@+id/live_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/m5dp"
        android:divider="@null"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/live_menu_item_selector2" />

</LinearLayout>