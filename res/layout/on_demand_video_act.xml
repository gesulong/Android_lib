<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.bjanch.www.kinmentv.custom.MPlayer
        android:id="@+id/on_demand_video_mp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mplayer_bg"
        android:focusable="true"
        android:layout_margin="5dp"
        android:focusableInTouchMode="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/on_demand_video_act_rl_marginTop"
        android:layout_marginRight="@dimen/on_demand_video_act_rl_marginRight">

        <com.bjanch.www.kinmentv.custom.OnDemandVidepEpisodeView
            android:id="@+id/on_demand_video_episode_ls_vw"
            android:layout_width="@dimen/on_demand_video_episode_ls_vw_width"
            android:layout_height="@dimen/on_demand_video_episode_ls_vw_height">
        </com.bjanch.www.kinmentv.custom.OnDemandVidepEpisodeView>
    </RelativeLayout>
</FrameLayout>