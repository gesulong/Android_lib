<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/app_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m50dp"
        android:layout_marginBottom="@dimen/m40dp"
        android:layout_marginLeft="@dimen/m20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/m50dp"
            android:layout_height="@dimen/m50dp"
            android:src="@mipmap/magazine_title_ico"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/m50dp"
            android:gravity="center"
            android:text="@string/magazine_title"
            android:textColor="@color/white"
            android:textSize="@dimen/m35sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/magazine_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/m30dp"
        android:scrollbars="horizontal" />


</LinearLayout>
