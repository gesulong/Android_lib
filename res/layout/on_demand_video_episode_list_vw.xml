<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/live_left_menu_bg2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center"
            android:padding="@dimen/on_demand_video_episode_list_vw_padding"
            android:text="@string/episode_list"
            android:textColor="@color/white"
            android:textSize="@dimen/on_demand_video_episode_list_vw_size" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:adjustViewBounds="true"
            android:focusable="false"
            android:scaleType="fitXY"
            android:src="@mipmap/live_line_t" />

        <ListView
            android:id="@+id/on_demand_video_list_lv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            android:layoutAnimation="@anim/layout_bottom_to_top_slide"
            android:listSelector="@drawable/live_menu_item_selector2"
            android:persistentDrawingCache="animation|scrolling" />
    </LinearLayout>

</FrameLayout>